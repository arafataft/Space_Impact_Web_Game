{
  "compilerOptions": {
    "jsx": "react-jsx",
    "checkJs": true,
    "allowJs": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.js", "src/**/*.jsx"],
  "exclude": ["node_modules"]
}
